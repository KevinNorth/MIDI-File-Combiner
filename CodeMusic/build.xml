<project>
	<path id="classpath">
		<fileset dir="lib/commons-lang3-3.4/" includes="commons-lang3-3.4.jar"/>
	</path>

	<target name="clean">
		<delete dir="bin"/>
	</target>

	<target name="compile">
		<mkdir dir="bin"/>
		<javac srcdir="src" destdir="bin" classpathref="classpath"/>
	</target>

	<target name="jar">
		<jar destfile="MusicPlusPlus.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="CodeMusic"/>
			</manifest>
		</jar>
	</target>

	<target name="run">
		<java jar="MusicPlusPlus.jar" fork="true"/>
	</target>
</project>
